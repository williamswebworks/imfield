/**
 * @file
 * Creates a database column when imfield is installed.
 */

/**
 * Implements hook_field_schema().
 */
function imfield_field_schema($field) {
  return array(
    'columns' => array(
      'value' => array(
        'type' => 'varchar',
        'size' => 'normal',
        'not null' => FALSE,
        'length' => 32,
      ),
    ),
  );
}
